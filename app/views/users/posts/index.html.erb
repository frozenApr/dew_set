<div class="bs-docs-container">
  <div class="bs-docs-section">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="navbar-action right">
            <%= link_to '发布约拍',  new_users_post_path , class: 'btn btn-primary'%>
          </div>
          <div class="posts_section clear">
            <ul>
              <% @posts.each do |post| %>
              <li class="one_post">
                <div class="post_info">
                  <h4><%= post.title %></h4>
                  <div class="dropdown right">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to '删除', [:users, p], method: :delete, data:{confirm: '确定删除?'} %></li>
                    </ul>
                  </div>
                  <p><%= post.content %></p>
                  <div class="post_image">
                    <% post.images.first(4).each do |i| %>
                    <img src="<%= i.url %>" alt="">
                    <% end %>
                  </div>
                  <div class="post_detial">
                    <span><%= post.city %>
                      <span><%= time_ago_in_words(post.created_at)%><span>
                        <span>￥<%= post.price %></span>
                      </div>
                      <div class="visit_info">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                      </div>
                    </div>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <style media="screen">
    .bs-docs-section {background: #ececf3}
    .posts_section ul{padding: 0}
    .one_post{background: white; padding:10px; margin-bottom: 10px}
    .comment_list .comment_avatar{width:40px; height:40px;border: 1px solid #ffffff;border-radius:20px;overflow:hidden;float: left}
    .post_info a{text-decoration:none; color: black}
    .post_info a:hover{text-decoration:none;color:black}
    .post_image{width:1100px; height:180px; overflow:hidden}
    .post_image img{width:270px; height:auto;}
    .post_detial {margin-top: 10px; color: grey}
    .visit_info .glyphicon{color: #5bc0de;}
    </style>
